<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Contenedor vertical para todo el contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/calculo_mensual"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Badge Moneda (opcional, si lo estás mostrando) -->
        <TextView
            android:id="@+id/tvCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="Moneda: EUR (EUR)"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple"
            android:background="@android:color/darker_gray" />

        <!-- Cantidad de personas -->
        <EditText
            android:id="@+id/etPersonas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/cantidad_personas"
            android:inputType="number" />

        <!-- Bloque porcentajes -->
        <LinearLayout
            android:id="@+id/boxPorcentajes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGenerarPorcentajes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/generar_porcentajes" />

            <TextView
                android:id="@+id/tvHintSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/hint_sumar_100" />

            <!-- Aquí se agregan dinámicamente los EditText de % -->
            <LinearLayout
                android:id="@+id/containerPorcentajes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />
        </LinearLayout>

        <!-- Gastos -->
        <EditText
            android:id="@+id/etGastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/gastos_totales"
            android:inputType="numberDecimal" />

        <!-- Ingresos -->
        <EditText
            android:id="@+id/etIngresos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/ingresos_totales"
            android:inputType="numberDecimal" />

        <!-- Resultado -->
        <TextView
            android:id="@+id/tvLabelTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/total_por_persona"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:padding="12dp"
            android:text="—"
            android:textSize="18sp" />

        <!-- Botones -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/calcular" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/limpiar" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Atrás" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
